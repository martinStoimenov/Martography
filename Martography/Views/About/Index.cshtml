</div>

<div class="wrapper image-wrapper bg-image inverse-text" data-image-src="style/images/home-page-testimonials.jpg">
    <div class="container inner pt-150 pb-150">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <div class="cube-slider cbp-slider-edge cbp">
                    @foreach (var testimonial in Model.AllTestimonials)
                    {
                    <div class="cbp-item">
                        <blockquote class="icon icon-top larger text-center pl-60 pr-60">
                            <p>@testimonial.Content</p>
                            <footer class="blockquote-footer">@testimonial.PersonName</footer>
                        </blockquote>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <form id="testimonialsForm" method="post" style="width:auto;">
                <div id="error-email-alert" class="alert alert-danger fade row col justify-content-center" role="alert"> Sorry there was an error or you are already subscribed. </div>
                <label class="col-form-label-sm d-block text-center" style="font-size: x-large;">Leave testimonial</label>
                <div class="row text-center">
                    <div class="col-md-6 pr-10">
                        <div class="form-group">
                            <input asp-for="@Model.TestimonialFormModel.PersonName" type="text" class="form-control" placeholder="Your name" required="required">
                            <span class="text-danger" asp-validation-for="TestimonialFormModel.PersonName"></span>
                        </div>
                    </div>
                    <div class="col-md-6 pl-10">
                        <div class="form-group">
                            <input asp-for="@Model.TestimonialFormModel.EmailAddress" type="email" class="form-control" placeholder="Your e-mail">
                            <span class="text-danger" asp-validation-for="TestimonialFormModel.EmailAddress"></span>
                        </div>
                    </div>
                    <div class="col-md-6 pl-10">
                        <div class="form-group">
                            <input asp-for="@Model.TestimonialFormModel.Company" type="text" class="form-control" placeholder="Company">
                            <span class="text-danger" asp-validation-for="TestimonialFormModel.Company"></span>
                        </div>
                    </div>
                    <div class="col-md-6 pl-10">
                        <div class="form-group">
                            <input asp-for="@Model.TestimonialFormModel.Position" type="text" class="form-control" placeholder="Position">
                            <span class="text-danger" asp-validation-for="TestimonialFormModel.Position"></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <textarea asp-for="@Model.TestimonialFormModel.Content" class="form-control" rows="3" placeholder="Leave your thoughts here..." required="required"></textarea>
                        <span class="text-danger" asp-validation-for="TestimonialFormModel.Content"></span>
                        <div class="space20"></div>
                        <button type="submit" style="background-color: black;" class="btn" data-error="Fix errors" data-processing="Sending..." data-success="Thank you!">Submit</button>
                        <div id="success-email-alert" class="alert alert-success fade row col justify-content-center" role="alert"> Thank you. </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="wrapper gray-wrapper">
    <div class="container inner text-center">
        <h3 class="sub-heading2 text-center">Work with Me</h3>
        <div class="space20"></div>
        <a asp-controller="Contact" asp-action="Send" style="background-color: black;" class="btn btn-l">Get in Touch</a>
    </div>
</div>
