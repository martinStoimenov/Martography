<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <form id="testimonialsForm" method="post" style="width:auto;">
                <div id="error-email-alert" class="alert alert-danger fade row col justify-content-center" role="alert"> Sorry there was an error or you are already subscribed. </div>
                <label class="col-form-label-sm d-block text-center" style="font-size: x-large;">Leave testimonial</label>
                <div class="row text-center">
                    <div class="col-md-6 pr-10">
                        <div class="form-group">
                            <input asp-for="@Model.PersonName" type="text" class="form-control" placeholder="Your name" required="required">
                            <span class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 pl-10">
                        <div class="form-group">
                            <input asp-for="@Model.EmailAddress" type="email" class="form-control" placeholder="Your e-mail">
                            <span class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 pl-10">
                        <div class="form-group">
                            <input asp-for="@Model.Company" type="text" class="form-control" placeholder="Company">
                            <span class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 pl-10">
                        <div class="form-group">
                            <input asp-for="@Model.Position" type="text" class="form-control" placeholder="Position">
                            <span class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <textarea asp-for="@Model.Content" class="form-control" rows="3" placeholder="Leave your thoughts here..." required="required"></textarea>
                        <div class="space20"></div>
                        <button type="submit" style="background-color: black;" class="btn" data-error="Fix errors" data-processing="Sending..." data-success="Thank you!">Submit</button>
                        <div id="success-email-alert" class="alert alert-success fade row col justify-content-center" role="alert"> Thank you. </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="wrapper gray-wrapper">
    <div class="container inner text-center">
        <h2 class="title-color color-dark mb-20 text-center">If you like what you see</h2>
        <h3 class="sub-heading2 text-center">Work with Me</h3>
        <div class="space20"></div>
        <a asp-controller="Contact" asp-action="Send" style="background-color: black;" class="btn btn-l">Get in Touch</a>
    </div>
</div>
